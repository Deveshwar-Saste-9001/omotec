<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="2dp"
    android:layout_marginVertical="2dp"

    android:background="@drawable/main_btn_background">

    <TextView

        android:id="@+id/TrainersnameDaily"
        android:layout_width="110dp"
        android:layout_height="50dp"

        android:background="@drawable/circle_back"


        android:gravity="start"
        android:text="Deveshwar, Harshal"
        android:textColor="@color/white"
        android:textSize="13sp"

        app:layout_constraintBottom_toBottomOf="@+id/schoolnameDaily"
        app:layout_constraintEnd_toStartOf="@+id/constraintLayout2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/schoolnameDaily"
        app:layout_constraintTop_toTopOf="@+id/schoolnameDaily" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/TrainersnameDaily"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/TrainersnameDaily"
        app:layout_constraintTop_toTopOf="@+id/TrainersnameDaily">

        <Button
            android:id="@+id/editMorebtnDaily"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/main_btn_background"

            android:text="Edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/viewMoreBtnDaily"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/main_btn_background"
            android:text="View"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editMorebtnDaily" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView

        android:id="@+id/schoolnameDaily"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_back"
        android:gravity="start"


        android:text="Beacon High School"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/TrainersnameDaily"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>